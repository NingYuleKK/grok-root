---
interface Props {
  title: string;
  description?: string;
}

import "../styles/global.css";

const { title, description = "Litch's Grok Log - Notes from building with AI" } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalUrl = Astro.url.href;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <link rel="canonical" href={canonicalUrl} />
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to content</a>
    <header class="site-header">
      <div class="container">
        <a class="brand" href={`${base}/`}>Litch's Grok Log</a>
        <nav aria-label="Primary">
          <a href={`${base}/`} aria-current={currentPath === `${base}/` ? "page" : undefined}>Home</a>
          <a href={`${base}/tags/`} aria-current={currentPath.startsWith(`${base}/tags`) ? "page" : undefined}>
            Tags
          </a>
        </nav>
      </div>
    </header>
    <main id="main-content" class="container page-shell">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container">Â© 2026 Litch's Grok Log</div>
    </footer>
  </body>
</html>
