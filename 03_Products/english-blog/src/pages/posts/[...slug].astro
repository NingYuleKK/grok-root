---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import NewsletterForm from "../../components/NewsletterForm.astro";
import GiscusComments from "../../components/GiscusComments.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} | Litchi Notes`} description={post.data.description}>
  <article class="post section-block">
    <p class="meta">{post.data.pubDate.toISOString().slice(0, 10)}</p>
    <h1>{post.data.title}</h1>
    <p class="post-desc lede">{post.data.description}</p>
    <p class="tags">
      {post.data.tags.map((tag) => (
        <a class="tag" href={`/tags/${encodeURIComponent(tag)}/`}>#{tag}</a>
      ))}
    </p>
    <Content />
  </article>

  <NewsletterForm placement="post" />
  <GiscusComments />
</BaseLayout>
