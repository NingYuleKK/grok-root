---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import NewsletterForm from "../components/NewsletterForm.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Litchi Notes" description="Product and engineering writing by Litchi.">
  <section class="hero section-block">
    <p class="eyebrow">Week 2 Upgrade</p>
    <h1>English Blog on Astro</h1>
    <p class="lede">
      A long-term writing setup with Markdown posts and native tags pages.
    </p>
  </section>

  <section class="section-block">
    <h2>Latest Posts</h2>
    <ul class="post-list">
      {
        posts.map((post) => (
          <li class="post-item">
            <p class="meta">{post.data.pubDate.toISOString().slice(0, 10)}</p>
            <h3>
              <a href={`${base}posts/${post.slug}/`}>{post.data.title}</a>
            </h3>
            <p>{post.data.description}</p>
            <p class="tags">
              {post.data.tags.map((tag) => (
                <a class="tag" href={`${base}tags/${encodeURIComponent(tag)}/`}>#{tag}</a>
              ))}
            </p>
          </li>
        ))
      }
    </ul>
  </section>

  <NewsletterForm placement="home" />
</BaseLayout>
